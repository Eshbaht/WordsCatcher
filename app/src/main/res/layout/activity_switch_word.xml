<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/take_words"
android:screenOrientation="portrait"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".SwitchWords.SwitchWord">

<TextView
    android:id="@+id/lvl_1"
    android:text="Первый уровень"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/choosen_word_1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lvl_1"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"
        android:background="@drawable/wordonlvl"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="8pt" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBox_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/lvl_1"
        android:layout_alignBaseline="@id/choosen_word_1"
        android:layout_toStartOf="@id/choosen_word_1"
        android:theme="@style/MyCheckBox" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/collectionByword_1"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_below="@id/lvl_1"
        android:layout_toRightOf="@id/choosen_word_1"
        android:background="@drawable/arrowhead" />


    <TextView
        android:id="@+id/lvl_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choosen_word_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Второй уровень" />

    <TextView
        android:id="@+id/choosen_word_2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/lvl_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/wordonlvl"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="8pt" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkBox_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/lvl_2"
        android:layout_alignBaseline="@id/choosen_word_2"
        android:theme="@style/MyCheckBox"
        android:layout_toStartOf="@id/choosen_word_2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/collectionByword_2"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/arrowhead"
        android:layout_below="@id/lvl_2"
        android:layout_toRightOf="@id/choosen_word_2" />



    <Button
        android:id="@+id/butClose_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/take_words_up"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>