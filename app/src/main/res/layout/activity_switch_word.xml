<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/take_words"
android:screenOrientation="portrait"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".SwitchWords.SwitchWord">

    <TextView
        android:id="@+id/lvl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Получайте выше уровень, что бы открыть больше слов" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/word_collections"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/confirm_choise"
        android:layout_below="@id/lvl_1"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/confirm_choise"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="НАЗАД В ИГРУ"

        android:textAlignment="center" />



</RelativeLayout>